<%= form_for @candidate do |f| %>
  <fieldset>
    <%= f.label :first_name %>
    <%= f.text_field :first_name, :required => true%>
  </fieldset>

  <fieldset>
    <%= f.label :last_name%>
    <%= f.text_field :last_name, :required => true%>
  </fieldset>

  <fieldset>
    <%= f.label :dob, 'Date of birth' %>
    <%= f.text_field :dob, :placeholder => '1970-1-25', :required => true %>
  </fieldset>

  <fieldset>
    <%= f.label :email %>
    <%= f.email_field :email, :required => true %>
  </fieldset>

  <fieldset>
    <%= f.label :candidate_contact_number %>
    <%= f.phone_field :candidate_contact_number %>
  </fieldset>

  <fieldset>
    <%= f.label :gender %>
    <%= f.text_field:gender %>
  </fieldset>

  <fieldset>
    <%= f.label :residency_status %>
    <%= f.text_field:residency_status %>
  </fieldset>

  <fieldset>
    <%= f.label :residental_address %>
    <%= f.text_field:residental_address %>
  </fieldset>

  <fieldset>
    <%= f.label :residental_suburb %>
    <%= f.text_field:residental_suburb %>
  </fieldset>

  <fieldset>
    <%= f.label :residental_state %>
    <%= f.text_field:residental_state %>
  </fieldset>

  <fieldset>
    <%= f.label :residental_postcode %>
    <%= f.number_field :residental_postcode %>
  </fieldset>

  <fieldset>
    <%= f.label :postal_address %>
    <%= f.text_field:postal_address %>
  </fieldset>

  <fieldset>
    <%= f.label :postal_suburb %>
    <%= f.text_field:postal_suburb %>
  </fieldset>

  <fieldset>
    <%= f.label :postal_state %>
    <%= f.text_field:postal_state %>
  </fieldset>

  <fieldset>
    <%= f.label :postal_postcode %>
    <%= f.number_field :postal_postcode %>
  </fieldset>

  <fieldset>
    <%= f.label :introduction %>
    <%= f.text_field:introduction %>
  </fieldset>

  <fieldset>
    <%= f.label :education %>
    <%= f.text_field:education %>
  </fieldset>

  <fieldset>
    <%= f.label :profession %>
    <%= f.text_field:profession%>
  </fieldset>

  <fieldset>
    <%= f.label :skills %>
    <%= f.text_field:skills %>
  </fieldset>

  <fieldset>
    <%= f.label :other_skills %>
    <%= f.text_field:other_skills %>
  </fieldset>

  <fieldset>
    <%= f.label :certificates_licenses %>
    <%= f.text_field:certificates_licenses %>
  </fieldset>

  <%= f.submit %>

<% end %>
